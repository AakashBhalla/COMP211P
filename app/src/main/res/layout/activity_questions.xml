<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:background="#A1A9DE"
    android:orientation="vertical"
    tools:context="com.example.aakash.gkquiz.Questions">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:text="Q1"
        android:onClick="onQ1Click"
        android:id="@+id/Q1"
        style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Q2"
            android:onClick="onQ2Click"
            android:id="@+id/Q2"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Q3"
            android:onClick="onQ3Click"
            android:id="@+id/Q3"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Q4"
            android:onClick="onQ4Click"
            android:id="@+id/Q4"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Q5"
            android:onClick="onQ5Click"
            android:id="@+id/Q5"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Q6"
            android:onClick="onQ6Click"
            android:id="@+id/Q6"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Q7"
            android:onClick="onQ7Click"
            android:id="@+id/Q7"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:text="Q8"
        android:onClick="onQ8Click"
        android:id="@+id/Q8"
        style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Q9"
            android:onClick="onQ9Click"
            android:id="@+id/Q9"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Q10"
            android:onClick="onQ10Click"
            android:id="@+id/Q10"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textColor="#440027"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:id="@+id/question"/>

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#9775AA"
    android:inputType="text"
    android:textSize="20dip"
    android:layout_margin="10dp"
    android:hint="Answer"
    android:gravity="center"
    android:onClick="onAnswerClick"
    android:id="@+id/answer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Skip"
            android:onClick="onSkipClick"
            android:id="@+id/SkipButton"
            style="@style/Widget.AppCompat.Button.Colored"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="Cheat"
            android:onClick="onCheatClick"
            android:id="@+id/CheatButton"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:text="Next"
        android:onClick="onNextClick"
        android:id="@+id/NextButton"
        style="@style/Widget.AppCompat.Button.Colored"/>
</LinearLayout>
